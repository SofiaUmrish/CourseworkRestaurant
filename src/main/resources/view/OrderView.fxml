<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>


<AnchorPane  prefHeight="680" prefWidth="1000"
             xmlns="http://javafx.com/javafx/21"
             xmlns:fx="http://javafx.com/fxml/1"
             fx:controller="org.example.restaurant_management_system.controller.OrderController">

    <VBox spacing="20" alignment="CENTER" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

        <Label text="Управління замовленнями" styleClass="title-label"/>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Столик:" styleClass="label"/>
            <TextField fx:id="tableOrClientField" promptText="№ столика або ID клієнта"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Тип замовлення:" styleClass="label"/>
            <ChoiceBox fx:id="orderTypeBox">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Їжа"/>
                        <String fx:value="Напої"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
        </HBox>

        <TextArea fx:id="orderDetailsArea" promptText="Деталі замовлення..." prefHeight="100"/>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Оплата:" styleClass="label"/>
            <ChoiceBox fx:id="paymentMethodBox">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Готівка"/>
                        <String fx:value="Картка"/>
                        <String fx:value="Бонуси"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
        </HBox>

        <Button text="Зберегти замовлення" onAction="#handleSaveOrder"/>
        <Label fx:id="statusLabel" styleClass="bottom-label"/>

    </VBox>
</AnchorPane>
